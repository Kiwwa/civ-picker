<h2>List of Games</h2>
<ul>
  <% @games.each do |game| %>
    <li><%= link_to "#{game.name}", game %></li>
  <% end %>
</ul>

<h2>Create a game!</h2>
<%= form_tag("/games", method: "post") do %>
  <%= label_tag(:q, "Game Name") %>
  <%= text_field_tag(:name) %>
  <%= submit_tag("Create Game") %>
<% end %>
